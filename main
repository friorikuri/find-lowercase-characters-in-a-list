mess = "CdEcafddf"
new_mess = []
i = True
n = 0

while i == True:
	if mess[n:n+3].isupper():
		print "Almost..."
		if mess[n+3].islower():
			print "Almost..."
			if mess[n+4:n+7].isupper():
				new_mess.append(mess[n:n+7])
				print new_mess
				print "This is the index of the first character:",n
				print "This is the index of the last character:",n+7
				i = False
			else:
				n += 1
				i = True
		else:
			n += 1
			i = True
	else:
		n += 1
		i = True
